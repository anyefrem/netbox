{% for intf in interfaces %}
{% if intf.isp_l3_flag and intf.cid_svc and intf.cid_isp and intf.cid_rate %}
policy-map SHAPER-{{ intf.cid_svc }}-{{ intf.cid_isp }}
 class class-default
  shape average {{ intf.cid_rate }}
!
{% endif %}
interface {{ intf.name }}
{% if intf.desc|length > 0 %}
 description {{ intf.desc}}
{% endif %}
{% if intf.vlans %}
 switchport trunk allowed vlan {{ intf.vlans|join(',')}}
{% endif %}
{% if intf.native_vlan %}
 switchport trunk native vlan {{ intf.native_vlan }}
{% endif %}
{% if intf.mtu %}
 ip mtu {{ intf.mtu }}
 ip tcp adjust-mss {{ intf.mss }}
{% endif %}
{% if intf.isp_l2_flag %}
{% if intf.switch_flag %}
 switchport mode access
 switchport access vlan {{ intf.access_vlan }}
 spanning-tree portfast
 spanning-tree bpdufilter enable
{% endif %}
 no cdp enable
 no lldp transmit
 no lldp receive
{% endif %}
{% if intf.isp_l3_flag %}
 no ip redirects
 no ip unreachables
 no ip proxy-arp
{% if intf.cid_svc and intf.cid_isp and intf.cid_rate%}
 service-policy output SHAPER-{{ intf.cid_svc }}-{{ intf.cid_isp }}
{%- endif %} 
{% endif %}
!
{% endfor %}